% neurips_2025.sty - Style file for NeurIPS 2025
% Based on the official NeurIPS template

\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2025}[2025/03/28 NeurIPS 2025 submission/camera-ready style file]

% Options
\newif\if@final\@finalfalse
\newif\if@preprint\@preprintfalse
\newif\if@nonatbib\@nonatbibfalse

\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@preprinttrue}
\DeclareOption{nonatbib}{\@nonatbibtrue}
\ProcessOptions\relax

% Fonts
\RequirePackage{times}
\RequirePackage{latexsym}

% Page layout
\RequirePackage[verbose=true,letterpaper]{geometry}
\AtBeginDocument{
  \newgeometry{
    textheight=9in,
    textwidth=5.5in,
    top=1in,
    headheight=12pt,
    headsep=25pt,
    footskip=30pt
  }
}

% Spacing
\setlength{\parindent}{0pt}
\setlength{\parskip}{5.5pt}

% Abstract
\renewenvironment{abstract}%
{\centerline{\large\bfseries Abstract}\vspace{0.5ex}\begin{quote}}%
{\par\end{quote}\vskip 1ex}

% Title
\def\@maketitle{%
  \vbox to \titlebox{%
    \vskip 0.125in%
    \centering%
    {\LARGE\bfseries \@title \par}%
    \vskip 0.25in%
    {\large
      \if@final
        \@author
      \else
        \if@preprint
          \@author
        \else
          Anonymous Author(s)\\
          Affiliation\\
          Address\\
          \texttt{anonymous@example.com}
        \fi
      \fi
    }%
    \vskip 0.25in%
  }%
}

\newlength\titlebox
\setlength\titlebox{2.25in}

% Line numbers for review
\if@final\else
  \if@preprint\else
    \RequirePackage{lineno}
    \linenumbers
  \fi
\fi

% Load natbib unless suppressed
\if@nonatbib\else
  \RequirePackage{natbib}
\fi

% Conference notice
\if@final
  \def\@neuripsnotice{%
    Advances in Neural Information Processing Systems 38 (NeurIPS 2025).%
  }
\else
  \if@preprint
    \def\@neuripsnotice{Preprint. Under review.}
  \else
    \def\@neuripsnotice{Submitted to NeurIPS 2025.}
  \fi
\fi

% Footer
\RequirePackage{fancyhdr}
\pagestyle{fancy}
\fancyhf{}
\fancyfoot[C]{\thepage}
\renewcommand{\headrulewidth}{0pt}
\renewcommand{\footrulewidth}{0pt}

% Sections
\renewcommand\section{\@startsection{section}{1}{\z@}%
  {-2.5ex \@plus -1ex \@minus -.2ex}%
  {1.3ex \@plus.2ex}%
  {\normalfont\large\bfseries}}
\renewcommand\subsection{\@startsection{subsection}{2}{\z@}%
  {-2.25ex\@plus -1ex \@minus -.2ex}%
  {1ex \@plus .2ex}%
  {\normalfont\normalsize\bfseries}}
\renewcommand\subsubsection{\@startsection{subsubsection}{3}{\z@}%
  {-2ex\@plus -1ex \@minus -.2ex}%
  {0.75ex \@plus .2ex}%
  {\normalfont\normalsize\bfseries}}
\renewcommand\paragraph{\@startsection{paragraph}{4}{\z@}%
  {1.5ex \@plus 0.5ex \@minus .2ex}%
  {-1em}%
  {\normalfont\normalsize\bfseries}}

\endinput
