[flake8]
max-line-length = 100
# E501: line too long (handled by black)
# W503: line break before binary operator (black compatible)
# E203: whitespace before ':' (black compatible)
# E225: missing whitespace around operator (slice notation)
# E226: missing whitespace around arithmetic operator
# E402: module level import not at top of file
# E712: comparison to True/False
# E741: ambiguous variable name
# F401: imported but unused
# F541: f-string is missing placeholders
# F811: redefinition of unused name
# F841: local variable assigned but never used
# F824: global is unused
ignore = E501,W503,E203,E225,E226,E402,E712,E741,F401,F541,F811,F841,F824,W605,W504,E722
exclude = .git,__pycache__,build,dist,*.egg-info
